{
  "name": "Python uv + Spec Kit Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugger",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "github.copilot"
      ]
    }
  },

  // Hier: Python-Umgebung + Spec Kit Check
  "postCreateCommand": "uv sync && specify check || true",

  "containerEnv": {
    // Platz f√ºr API-Keys etc.
  }
}
{
  "name": "Python uv + Spec Kit Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugger",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "github.copilot"
      ]
    }
  },

  "postCreateCommand": "uv sync && uv tool install specify-cli --from git+https://github.com/github/spec-kit.git && specify check || true",

  "containerEnv": {
    // hier sp√§ter z.B. OPENAI_API_KEY, GITHUB_TOKEN etc.
  }
}
